var agora = new Date()
var hora = agora.getHours()
console.log(`sao ${hora} horas`)
if ((hora >= 6) && (hora < 12)) {
    console.log('Dia')
} else if ((hora >= 12) && (hora < 18)) {
    console.log('Tarde')
} else if ((hora >= 18) && (hora < 24)) {
    console.log(`Noite`)
} else if(hora < 6) {
    console.log(`Madrugada`)
}